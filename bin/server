#!/usr/bin/env php
<?php

use Sws\Application;

define('BASE_PATH', dirname(__DIR__) );

require dirname(__DIR__) . '/boot/web.php';

$app = $di->get('app');
//$app = new \Sws\server\WebSocketServer($config);
//$app = new \inhere\server\BoxServer($config);

$app->attachListener('port2', new \inhere\server\portListeners\UdpListener([
    'host' => '0.0.0.0',
    'port' => '9762',
]));

// load ws modules
require dirname(__DIR__) . '/app/Ws/modules.php';

/**
 * do run
 * @var Application $app
 */
$app->run();