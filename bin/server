#!/usr/bin/env php
<?php
/**
 * @var Container $di
 * @var \inhere\library\collections\Configuration $config
 * @var Server $server
 * @var Application $app
 * @usage `php bin/server start|stop|...`
 */

use inhere\library\di\Container;
use Sws\Application;
use Sws\Server;

define('BASE_PATH', dirname(__DIR__) );

require dirname(__DIR__) . '/boot/app.php';

ini_set('display_errors', 'On');
error_reporting(E_ALL);

define('RUNTIME_ENV', $config->get('env'));
define('APP_DEBUG', $config->get('debug'));

// create app server.
$server = $di->get('server');

$server->on(Server::ON_BOOTSTRAP, function () {
    // load ws modules
//    require dirname(__DIR__) . '/app/Ws/modules.php';
});

// 启动worker 后，再初始化应用(加载应用配置、路由 ...)
$server->on(Server::ON_WORKER_STARTED, function (Server $server) {
    /** @var Application $app */
    $app = Sws::$di->get('app');
    $server->setApp($app);

    // load http routes
    require dirname(__DIR__) . '/app/Http/routes.php';

    // load ws modules
    require dirname(__DIR__) . '/app/Ws/modules.php';

    $app->run();
});

$server->run();

//$app = $di->get('app');
//$app->run();
